<Window x:Class="storage_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_demo_course"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Content="Adicionar" Grid.Column="0"></Button>
            <Button Content="Excluir" Grid.Column="1"></Button>
            <Button Content="Simular venda" Grid.Column="2"></Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Padding="5 3" Margin="5 3"></TextBox>
            <Button Grid.Column="1">Pesquisar</Button>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <ListView Margin="5" ItemsSource="{d:SampleData}" Grid.Column="0">
                
            </ListView>
            <StackPanel Margin="0, 5,0,40" Name="StackPanel1" Grid.Column="1">
                <Label Height="28" Name="Label1" Width="auto">Código</Label>
                <Label Height="28" Name="Lebe12" Width="auto">Nome</Label>
                <Label Height="28" Name="Label3" Width="auto">Descrição</Label>
            </StackPanel>
            <StackPanel Margin="0, 5,5,40" Grid.Column="2">
                <TextBox Height="28" Width="auto">Digite o codigo</TextBox>
                <TextBox Height="28" Width="auto">Digite o nome</TextBox>
                <TextBox Height="28" Width="auto">Digite a descição</TextBox>
            </StackPanel>
            <Button Width="100" Content="Teste" Grid.Column="2" Margin="190,89,10,5" />
        </Grid>
        
        
    </Grid>
</Window>
